{{> header}}
<div class="container">

<h1>Record Activity</h1>

	<form id="record_activity_form" class = "form-horizontal" role="form">
		<div class="form-group">
	      <label for="activities" class="col-sm-2 control-label"> Activity: </label>
	      <select id="activity_select">
	      	{{#each activities}}
	        	<option value="{{activity}}">{{activity}}</option>
	        {{/each}}
	      </select>
	      </div>

		<div class="form-group">
	      <label for="hours"  class="col-sm-2 control-label"> Hours: </label>
	      <input type="text" id="hours" />
		
	      </div>
		  <input type="submit" id="submitBtn" class="button" value="Add Activity"></input>
	</form>
	
	<a href="/">Back to Home</a>
</div>

</body>
</html>