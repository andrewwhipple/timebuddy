{{> header}}
<div class="container">

<h1>Record Activity</h1>

	<form id="record_activity_form" role="form">
	      <label for="activities"> Activity: </label>
	      <select class="form-control" id="activity_select">
	      	{{#each activities}}
	        	<option value="{{activity}}">{{activity}}</option>
	        {{/each}}
	      </select>

	      <label for="hours"> Hours: </label>
	      <input type="text" id="hours"/>
	</form>
</div>

</body>
