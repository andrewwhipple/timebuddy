{{> header}}

<div class="container">

	<div class = 'container' id='message'/></div>
	{{> addactivityform}}

	<div class='container' id="acts">
		{{#if activities}}
			{{#each activities}}
			<div class="row activity well well-sm activitydiv" id="{{activity}}">
				<div class="" id='{{activity}}'>
					<div class="activityclickdiv">
						<button type="button" class="editGoalButton btn-xs btn-primary" id='editgoalbtn{{activity}}'>
						<span class="glyphicon glyphicon-edit"></span></button>
						
						<div class="inline well-text" id="{{activity}}"><em><strong> {{activity}} </strong></em></div> 
						<div class="inline" id="target"> {{hours}} / {{goal}}</div> hrs

						<div class='inline addhours float-right' >
							<form class ='inline' role='form'> 
								<div class='inline time form-group float-right'>
									<span class="glyphicon glyphicon-time" ></span>
									<a href='#'><span class="glyphicon glyphicon-minus submitAddHours" id ='minusBtn'></span></a>
									<input type="text" id="addtime" maxlength='4' size='4' placeholder='(hrs)'></input>
									<a href='#'><span class="glyphicon glyphicon-plus submitAddHours" id='plusBtn'></span></a>
									<input type='hidden' id='hoursspent' value="{{hours}}"/>
								</div>
							</form>
						</div>
					</div>
				</div>
					<div class='container editgoaldiv' id='{{activity}}'>
						<form class ="editgoalform inline" role="form" id="editgoalform{{activity}}">
							<div class=" time form-group col-sm-">
								<label class="control-label" for="text"> How much time do you want to spend on this per day? </label>
								<input type="text"  class="form-control" id="time" placeholder="0.00"></input>
								
								<div class='btn-group'>
									<a href="#"><button type="button" class="submitGoalButton submitBtn btn btn-primary">
									<span class="glyphicon glyphicon-ok"></span> Submit</button></a>
									<button type="button" class="cancelButton btn">
									<span class="glyphicon glyphicon-remove"></span> Cancel </button><br>
								</div>
							</div>

							<div class = "button-toolbar" role="toolbar">
								<div class=" time form-group btn-group">
									<button type="button" class="deleteGoalButton btn-danger btn-xs">
										<span class="glyphicon glyphicon-trash"></span> Delete Target</button>
								</div>
							</div>
						</form>
					</div>

					<br/>
					<div class="progress">
	  					<div id="progress_bar" class="progress-bar" role="progressbar">
	  					</div>
					</div>
				</div>
			{{/each}}
		{{else}}
			<div class ='container'>
				Welcome to TimeBuddy! To get started using this app, 
				<a href="/editgoals">add some activities you plan to do</a> and how long you plan to do them!
			</div>
		{{/if}}
	</div>
</div>


